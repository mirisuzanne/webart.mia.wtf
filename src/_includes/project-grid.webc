<article
  webc:for="item of this.list"
  @attributes="item.data.img ? ({
    style: `--image: url(${item.data.img})`,
  }) : ({})"
>
  <h2><a
    :href="item.url"
    @html="mdI(item.data.title || item.data.project)"
  ></a></h2>
  <p @html="mdI(item.data.desc)"></p>
</article>

<style>
  project-grid {
    display: grid;
    gap: var(--gap);

    p { margin: unset; }
  }
</style>
